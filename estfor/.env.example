# EstFor Asset Collection System Environment Configuration

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=["*"]

# MongoDB Configuration (REQUIRED - no defaults for security)
# Format: mongodb://username:password@host:port/database?authSource=authdb
MONGODB_URI=mongodb://username:password@mongo:27017/estfor?authSource=estfor
MONGODB_DATABASE=estfor
MONGODB_COLLECTION=all_assets
MONGODB_MAX_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Security (REQUIRED - no defaults for security)
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
# Comma-separated list of valid API keys
API_KEYS=["key1","key2","key3"]

# EstFor API Configuration
ESTFOR_API_URL=https://api.estfor.com
ESTFOR_RATE_LIMIT=100

# PaintSwap API Configuration
PAINTSWAP_API_URL=https://api.paintswap.finance
PAINTSWAP_RATE_LIMIT=100

# IPFS Gateway Settings
IPFS_PRIMARY_GATEWAY=https://ipfs.io/ipfs/
IPFS_FALLBACK_GATEWAY=https://cloudflare-ipfs.com/ipfs/

# Performance
MAX_WORKERS=4
WORKER_TIMEOUT=300

# Container Management
CONTAINER_AUTO_START=true
CONTAINER_AUTO_STOP=true
CONTAINER_IDLE_TIMEOUT=30
CONTAINER_HIGH_IDLE_TIMEOUT=120
CONTAINER_LOW_IDLE_TIMEOUT=10
CONTAINER_STARTUP_TIMEOUT=60
CONTAINER_HEALTH_CHECK_INTERVAL=30

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp